<ui:FluentWindow x:Class="SerialApp.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:pages="clr-namespace:SerialApp.Pages"
                 Title="SerialApp Main"
        Height="600"
        Width="900"
                 WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:NavigationView x:Name="RootNavigation"
                           Grid.Row="1"
                           PaneDisplayMode="Left"
                           SelectionChanged="RootNavigation_SelectionChanged">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="コマンド送信"
                        Tag="Command"
                        Icon="{ui:SymbolIcon Send24}"/>
                <ui:NavigationViewItem Content="データ表示"
                        Tag="Data"
                        Icon="{ui:SymbolIcon DataHistogram24}"/>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="接続設定"
                        Icon="{ui:SymbolIcon Settings24}"
                        Click="SettingsItem_Click"/>
            </ui:NavigationView.FooterMenuItems>

            <ui:NavigationView.ContentOverlay>
                <Frame x:Name="RootFrame"
                        NavigationUIVisibility="Hidden"/>
            </ui:NavigationView.ContentOverlay>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>